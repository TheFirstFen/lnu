#!/bin/bash

# POST
curl -i -X POST -H 'Content-Type: application/json' -d '{"name": "Charles Doe","age": 20,"grade": "F"}' http://localhost:3000/students

# GET
curl -i -X GET http://localhost:3000/students/1

# PUT
curl -i -X PUT -H 'Content-Type: application/json' -d '{"name": "Charles Doe","age": 20,"grade": "A"}' http://localhost:3000/students/1

# DELETE
curl -i -X DELETE http://localhost:3000/students/1
